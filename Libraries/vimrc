function! IsLocked()
    " Loop through each line in the buffer
    for i in range(1, line('$'))
        " Check if the line contains 'Status' and 'Locked'
        if getline(i) =~# 'Status' && getline(i) =~# 'Locked'
            " Return "Locked" if found
            return "[Locked]"
        endif
    endfor
    " Return empty string if not found
    return ""
endfunction


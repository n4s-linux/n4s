function log() {
    echo -n "Indtast evt. s√∏gefrase eller tryk enter for at vise alle logs: "
    read search
    if [ "$search" == "" ]; then
        vi $tpath/.logs/$(ls $tpath/.logs -t|fzf)
    else
        valg=$(cd $tpath;grep -lri "$search" .logs|fzf)
        vi "$valg"
    fi
}

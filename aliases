function hmm() {
fn=$(
(
echo NEW
ls -t */.*.hmm 2>/dev/null)|fzf --header="Chose mindmap")
if [ "$fn" == "" ]; then
	return
fi
if [ "$fn" == "NEW" ]; then
	echo -n "Type mindmap name: ";
	read name
	fn="~/.$name.hmm"
fi
echo fn=$fn
/svn/svnroot/Applications/h-m-m "$fn"
}

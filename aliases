function updatebudget() {
    if [ "$tpath" == "" ];  then
        echo "updatebudget kr√¶ver tpath"
        return
    fi
    acc=$(cat $tpath/.budgetkonto 2>/dev/null)
    acc=$(php /svn/svnroot/Applications/newl.php accounts|grep -v ^Fejl|grep -v ^Egenkapital:|grep -v ^Udgifter|grep -v ^Indt√¶gter|grep -v ^Resultatdisponering|fzf --ansi --header="V√¶lg konto til fremskrivning" --query="$acc")
    echo -n "$acc" > $tpath/.budgetkonto
    pushd . >/dev/null
    gobackmonths=$(cat $tpath/.budgetgobackmonths 2>/dev/null)
    if [ "$gobackmonths" == "" ]; then
        gobackmonths=6
    fi
    echo -n "Indtast m√•neder tilbage fra nu til beregningsgrundlag ($gobackmonths): "
    read gbm
    if [ "$gbm" != "" ]; then
        gobackmonths=$gbm
    fi
    export gobackmonths
	budgetstart=$(date +%Y-%m-%d)
    budgetstart=$(cat $tpath/.budgetstart 2>/dev/null)
    if [ "$budgetstart" == "" ]; then
        budgetstart=$(date +%Y-%m-%d)
    fi
	echo -n "Indtast startdato for rullende budget ($budgetstart): "
	read bs
	if [ "$bs" != "" ]; then
		budgetstart=$bs
	fi
    export budgetstart
    forecast=$(cat $tpath/.forecastlength 2>/dev/null)
    if [ "$forecast" == "" ]; then
        forecast=12
    fi
	echo -n "Antal m√•neders forecast ($forecast): "
	read fc
	if [ "$fc" != "" ]; then
		forecast=$fc
	fi
    export forecast
    php /svn/svnroot/Applications/rullendebudget.php > $tpath/.budget.ledger
    popd >/dev/null
    export budget=1
    echo Du kan nu se posteringer i fremtidige perioder $forecast m√•neder ud i fremtiden baseret p√• gennemsnit
}
isYYYYMMDDdate() {
  [[ "$1" =~ ^[0-9]{4}-[0-9]{2}-[0-9]{2}$ ]] && [[ "$1" == $(date -r $(date -j -f "%Y-%m-%d" "$1" "+%s") '+%Y-%m-%d') ]] &> /dev/null; echo "$?"
}

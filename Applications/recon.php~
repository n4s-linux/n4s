}
system("$cmd");
while (true) {
	$sumz = array();
	$total = 0;
	$fh = fopen("/home/$op/tmp/outprec.tmp","r");
	$curline=-1;
	$linecount = count(explode("\n",file_get_contents("/home/$op/tmp/outprec.tmp")));
	$transactions = array();
	while($line = fgets($fh)) {
		$curline++;
		$header = "--header='$curline / $linecount'" ;
	    $data = str_getcsv($line);

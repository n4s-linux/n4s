" set statusline=%!StatusLine()
" set statusline=hejsa
function! StatusLine()
    if &ft == 'help'
        let l:status = "%#error#[HELP]%*"
    else
        let l:status = "n4s - %F"
    endif
    let &l:statusline = l:status
endfunction

function getcolor() {
	acc=$(echo "$1"|awk '{print $1}')
	if [ "$acc" == "Bank" ] || [ "$acc" == "Kasse" ]; then
		echo "#95eb34"
	else
		echo "#bec9b1"
	fi
}

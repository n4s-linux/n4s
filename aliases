function convertimages() {
ls *.jpg *.png *.JPG *.PNG 2>/dev/null|while read i
do
    echo "Konverterer $i til pdf"
    filemtime=$(stat -c %Y "$i")
    img2pdf --rotation=ifvalid "$i" -o "$i.pdf" && rm "$i" && touch -d @$filemtime "$i.pdf"
    done
}

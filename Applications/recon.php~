		$bilag = $data[1];
		$tekst = $data[2];
		$konto = $data[3];
		$belob = $data[5];
		$uid = date("Y-m-d",strtotime($date)) . md5(json_encode($data));
		$sum = getsum($uid,$data,$header);
		error_reporting(0);
		$sumz[$sum] += $belob;
		if (!isset($transactions[$sum]))$transactions[$sum] = array();

		if (isset($data[7]))
			$tags = explode("\\n",$data[7]);
